{
  "name": "@replr/api",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon -e ts,js,json --delay 250ms -x 'yarn dev:start'",
    "dev:start": "node --nolazy --inspect=0.0.0.0:9229 -r ts-node/register/transpile-only ./src/server",
    "lint": "eslint --ext .ts,.tsx,.js src/",
    "start": "node lib/server",
    "build": "tsc",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dockerode": "^2.5.8",
    "express": "^4.17.1",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@replr/tools": "0.0.0",
    "@types/cors": "^2.8.6",
    "@types/dockerode": "^2.5.20",
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.2",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
